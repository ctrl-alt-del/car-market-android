<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.car_market_android.MainActivity$AuthFragment" >

    <RelativeLayout
        android:id="@+id/user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:layout_marginLeft="36dp" >
        
        <ImageView
            android:id="@+id/user_icon"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/email_profile"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/email_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_icon"
            android:layout_margin="5sp"
            android:gravity="left"
            android:text=""
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nickname_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_icon"
            android:layout_below="@+id/email_profile"
            android:layout_margin="5sp"
            android:gravity="left"
            android:text=""
            android:textSize="20sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/authentication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_layout"
        android:layout_below="@+id/user_layout"
        android:layout_marginRight="5sp"
        android:gravity="center"
        android:text="Sign In" />

    <Button
        android:id="@+id/show_vehicles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_layout"
        android:layout_below="@+id/authentication"
        android:layout_marginRight="5sp"
        android:gravity="center"
        android:text="Show Vehicles" />

    <TextView
        android:id="@+id/json_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/user_layout"
        android:layout_below="@+id/show_vehicles"
        android:layout_marginRight="5sp"
        android:layout_marginTop="20dp"
        android:text="Json Result" />

</RelativeLayout>