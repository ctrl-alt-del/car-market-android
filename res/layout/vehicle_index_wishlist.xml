<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.car_market_android.MainActivity$AuthFragment" >


    <Button
        android:id="@+id/show_vehicles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5sp"
        android:gravity="center"
        android:text="Show Vehicles" />

    <TextView
        android:id="@+id/json_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/show_vehicles"
        android:layout_below="@+id/show_vehicles"
        android:layout_marginRight="5sp"
        android:layout_marginTop="20dp"
        android:text="Json Result" />

    <ListView
        android:id="@+id/vehicle_list_marketplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/json_result"
        android:layout_below="@+id/json_result"
        android:layout_marginTop="5sp" >
    </ListView>

</RelativeLayout>