<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_medium"
    tools:context="com.car_market_android.UserCreate">

    <android.widget.EditText
        android:id="@+id/nickname_user_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="14"
        android:hint="Nickname"></android.widget.EditText>

    <android.widget.EditText
        android:id="@+id/email_user_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nickname_user_create"
        android:layout_below="@+id/nickname_user_create"
        android:ems="14"
        android:hint="Email"
        android:inputType="textEmailAddress"></android.widget.EditText>

    <android.widget.EditText
        android:id="@+id/password_user_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nickname_user_create"
        android:layout_below="@+id/email_user_create"
        android:ems="14"
        android:hint="Password"
        android:inputType="textPassword"></android.widget.EditText>

    <android.widget.EditText
        android:id="@+id/password_confirmation_user_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nickname_user_create"
        android:layout_below="@+id/password_user_create"
        android:ems="14"
        android:hint="Password Conformation"
        android:inputType="textPassword"></android.widget.EditText>

    <Button
        android:id="@+id/terms_and_policy_user_create"
        android:layout_width="match_parent"
        android:layout_height="12sp"
        android:layout_alignLeft="@+id/nickname_user_create"
        android:layout_below="@+id/password_confirmation_user_create"
        android:background="@color/transparent"
        android:gravity="right|bottom"
        android:text="Terms and Policy"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nickname_user_create"
        android:layout_below="@+id/terms_and_policy_user_create"
        android:layout_marginTop="20sp"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <Button
            android:id="@+id/sign_up_user_create"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Sign Up" />

        <Button
            android:id="@+id/cancel_user_create"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Cancel" />
    </LinearLayout>

</RelativeLayout>