<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.car_market_android.MainActivity$AuthFragment" >

    <RelativeLayout
        android:id="@+id/vehicle_index_wishlist_row_layout"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_margin="5sp" >

        <RelativeLayout
            android:id="@+id/vehicle_index_wishlist_row_thumbnail_frame"
            android:layout_width="180sp"
            android:layout_height="120sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <ImageView
                android:id="@+id/vehicle_index_wishlist_row_thumbnail"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_launcher" />

            <Button
                android:id="@+id/vehicle_index_wishlist_row_delete"
                android:layout_width="70sp"
                android:layout_height="50sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="Delete"
                android:textSize="14sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/vehicle_index_wishlist_row_mmy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/vehicle_index_wishlist_row_thumbnail_frame"
            android:layout_marginBottom="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:layout_toRightOf="@+id/vehicle_index_wishlist_row_thumbnail_frame"
            android:gravity="right"
            android:text="MMY"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/vehicle_index_wishlist_row_vin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/vehicle_index_wishlist_row_mmy"
            android:layout_below="@+id/vehicle_index_wishlist_row_mmy"
            android:layout_marginBottom="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:gravity="right"
            android:text="vin"
            android:textSize="14sp" />

    </RelativeLayout>
</RelativeLayout>